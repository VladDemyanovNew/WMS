<style>
    table {
        border: solid 1px black;
        border-collapse: collapse;
    }

    thead {
        background-color: lightgray;
    }

    th, td {
        border: 1px solid black;
        padding: 5px;
    }
</style>

@if (@Model != null)
{
    <p>Hello, <b>@Model.UserName</b>!</p>
    <p>You have been registered on the Warehouse Management System.<br>
    To login use the credentials from the table below:</p>
    <table>
        <thead>
            <tr>
                <th>Email</th>
                <th>Initial password</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.Email</td>
            <td>@Model.Password</td>
        </tr>
    </table>
}
